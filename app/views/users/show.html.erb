<div class="row">
  <aside class="col-sm-4">
    <div class="card" style="border:2px solid #f4623a;">
      <div class="card-header" style="background-color:#f4623a; color:white;">
          <h3 class="card-title d-inline"><%= @user.name %></h3>
          <%= render 'relationships/follow_button', user: @user %>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
    
    <% if current_user == @user %>
      <%= link_to "プロフィール編集", edit_profile_user_path, class: 'btn  btn-block rounded-pill mt-2', :style => "background-color:#f4623a; color:white;"  %> 
      <%= link_to "アカウント編集", edit_account_user_path, class: 'btn  btn-block rounded-pill', :style => "background-color:#f4623a; color:white;"  %> 
    <% end %>
  </aside>

  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= posts_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(posts_user_path(@user)) %>">コミュニティ </a></li>
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">プロフィール </a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
    </ul>
    
    <form style="font-size:15px;">
      <div class="form-group row">
        <label for="staticContent" style="border-bottom:solid 2px #f4623a; height:10%; text-align:center; font-weight:bold;" class="col-sm-2 col-form-label">自己紹介</label>
        <div class="col-sm-10">
          <div style="white-space:pre-line"><%= @user.content %></div>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticSex" style="border-bottom:solid 2px #f4623a; height:10%; text-align:center; font-weight:bold;" class="col-sm-2 col-form-label">性別</label>
        <div class="col-sm-10">
          <div>
            <% if @user.sex == 1 %>
              男性
            <% elsif @user.sex == 2 %>
              女性
            <% else %>
              非公開
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticAddress" style="border-bottom:solid 2px #f4623a; height:10%; text-align:center; font-weight:bold;" class="col-sm-2 col-form-label">居住地</label>
        <div class="col-sm-10">
          <div style="white-space:pre-line"><%= @user.address %></div>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticContent2" style="border-bottom:solid 2px #f4623a; height:10%; text-align:center; font-weight:bold;" class="col-sm-2 col-form-label">プレイしている音ゲー</label>
        <div class="col-sm-10">
          <div style="white-space:pre-line"><%= @user.content2 %></div>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticContent3" style="border-bottom:solid 2px #f4623a; height:10%; text-align:center; font-weight:bold;" class="col-sm-2 col-form-label">プレイ環境</label>
        <div class="col-sm-10">
           <div style="white-space:pre-line"><%= @user.content3 %></div>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticContent4" style="border-bottom:solid 2px #f4623a; height:10%; text-align:center; font-weight:bold;" class="col-sm-2 col-form-label">好きな楽曲・譜面</label>
        <div class="col-sm-10">
           <div style="white-space:pre-line"><%= @user.content4 %></div>
        </div>
      </div>
    </form>
    
    
    
    
    
        
    
    
  </div>
</div>


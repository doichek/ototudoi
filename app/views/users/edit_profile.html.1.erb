 <%= form_with(model: @user, local: true) do |f| %>
<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
    <div class="form-group">
        <% if @user.image? %><!--この行の処理をしないとエラーが出る-->
          <%= image_tag @user.image.url %>
        <% end %>
        <%= f.file_field :image %>
    </div>
    <%= f.submit '更新する', class: 'btn  btn-block rounded-pill mt-2', :style => "background-color:#f4623a; color:white;"%>
  </aside>

  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item nav-link active">プロフィール編集  </li>
    </ul>
   
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">自己紹介</h3>
        </div>
        <div class="card-body">
          <%= f.text_area :content, :style => "width:100%;" %>
        </div>
      </div>
    　
   
  </div>
</div>

 <% end %>